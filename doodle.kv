#:kivy 1.10.1

<Playground>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/background.png'
    
    doodle: doodle_id
    platforms: platform_fabrica_id

    Doodle:
        id: doodle_id
        size: 75, 75
        doodle_img: doodle_img_id
        jump_sound_src: 'sounds/jump.mp3'
        jump_right_img_src: 'img/doodle-right.png' 
        jump_left_img_src: 'img/doodle-left.png' 
        Image:
            id: doodle_img_id
            pos: self.pos
            size: 75, 75
            source: doodle_id.jump_right_img_src

    PlatformFabrica:
        id: platform_fabrica_id

        doodle: doodle_id

        platform_green_src: 'img/platform_green.png'
        platform_green_size: [85, 15]
